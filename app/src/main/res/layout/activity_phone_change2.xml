<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_phone_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.fanli.activities.PhoneChangeActivity">
    <com.ascba.fanli.view.MoneyBar
        app:textTitle="修改手机号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手机号"
            android:textSize="@dimen/activity_text_normal"/>
        <com.ascba.fanli.view.EditTextWithCustomHint
            android:background="@null"
            android:hint="请输入您的新手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_text_normal"
            android:layout_marginLeft="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/phone_change_confirm_text02"
            android:textSize="@dimen/activity_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证"/>
        <com.ascba.fanli.view.EditTextWithCustomHint
            android:background="@null"
            android:layout_marginLeft="21dp"
            app:hintSize="@dimen/activity_text_normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone_change_confirm_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/phone_change_code_tv02"
            android:layout_centerVertical="true"
            android:textColor="@color/moneyBarColor"
            android:textSize="@dimen/activity_text_title"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"/>
        <View
            android:background="@color/view_line"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/phone_change_code_tv02"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View style="@style/viewStyleMatch"/>
    <Button
        android:textSize="@dimen/activity_text_title"
        android:text="提交"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        style="@style/btnNormal" />
</LinearLayout>
