<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_business_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.BusinessDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/business_details_go_where"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_space"
            android:orientation="horizontal">
            <LinearLayout
                android:onClick="goBaiduNavi"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="47dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/business_detail_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/activity_text_title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去那儿"/>
            </LinearLayout>
            <View
                android:layout_weight="0.01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/view_line"/>
            <LinearLayout
                android:onClick="goPhone"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="47dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/business_detail_phone_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/activity_text_title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系他"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/view002"
            android:layout_above="@id/business_details_go_where"
            style="@style/viewStyleMatch"/>
        <com.ascba.rebate.view.MoneyBar
            android:id="@+id/business_detail_mb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textTitle="商家详情"/>
        <ScrollView
            android:layout_below="@id/business_detail_mb"
            android:layout_above="@id/business_details_go_where"
            android:scrollbars="none"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_busi_pic"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="213.5dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_busi_name"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/rb_busi_star"
                            style="@style/rating_bar_style"
                            android:stepSize="1"
                            android:rating="3"
                            android:numStars="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_busi_score"
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0分"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/business_detail_type"/>
                        <TextView
                            android:id="@+id/tv_busi_type"
                            android:layout_marginLeft="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:background="@color/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="7.5dp"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_space"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@mipmap/business_detail_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_busi_address"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <View
                    style="@style/viewStyleMargin"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_space"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@mipmap/business_detail_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_busi_phone"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    style="@style/viewStyleMargin"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_space"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@mipmap/business_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_busi_time"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    style="@style/viewStyleMargin"/>
                <RelativeLayout
                    android:onClick="goDescription"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_space">
                    <ImageView
                        android:src="@mipmap/business_detail_desc"
                        android:layout_centerVertical="true"
                        android:id="@+id/img_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/img_01"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家简介"/>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_go"/>
                </RelativeLayout>
                <View
                    android:background="@color/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>
                <LinearLayout
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_space"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@mipmap/business_detail_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_busi_rate"
                        android:layout_marginLeft="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返佣比例 100%"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
