<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.fanli.activities.TicketActivity">
    <com.ascba.fanli.view.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="代金券"/>
    <FrameLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/main_sweep_bg"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/moneyBarColor"
                    android:textSize="@dimen/activity_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商城代金券"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textColor="@color/moneyBarColor"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期至2018-01-01"/>
            </LinearLayout>
            <TextView
                android:textSize="25sp"
                android:layout_marginTop="15dp"
                android:id="@+id/ticket_money"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"/>
            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/ticket_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/main_sweep_bg"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/moneyBarColor"
                    android:textSize="@dimen/activity_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商城代金券"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textColor="@color/moneyBarColor"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期至2018-01-01"/>
            </LinearLayout>
            <TextView
                android:textSize="25sp"
                android:layout_marginTop="15dp"
                android:id="@+id/ticket_money_02"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"/>
            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/ticket_money_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
        </RelativeLayout>
    </FrameLayout>
    <Button
        android:text="钱往商城"
        android:layout_marginTop="30dp"
        style="@style/btnNormal"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_blue"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如何获得代金券?"/>
</LinearLayout>
