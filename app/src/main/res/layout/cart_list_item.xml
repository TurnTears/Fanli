<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:qinc="http://schemas.android.com/tools"
    android:minHeight="107dp">
    <LinearLayout
        android:id="@+id/parent_cart_item"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/parent_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <CheckBox
                android:id="@+id/cb_cart_child"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/cart_cb_bg"
                android:maxLines="1"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/gray"
                android:text="失效"
                android:textSize="12sp"
                android:visibility="gone" />
        </FrameLayout>
        <ImageView
            android:id="@+id/cart_goods_pic"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/logo" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cart_goods_title"
                android:textSize="13sp"
                android:textColor="@color/shop_normal_text_color"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/edit_standard"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cart_goods_standard"
                    android:textSize="12sp"
                    android:text="颜色:贪色;尺码:S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:src="@mipmap/cart_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cart_price"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/shop_red_text_color"
                    android:text="￥ 368.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.ascba.rebate.view.cart_btn.NumberButton
                    android:layout_alignParentRight="true"
                    android:id="@+id/number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    qinc:editable="true"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        style="@style/viewStyleMatch"/>
</RelativeLayout>