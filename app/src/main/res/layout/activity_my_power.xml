<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_power"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qlqwgw.fanli.activities.MyPowerActivity">
    <com.qlqwgw.fanli.view.MoneyBar
        app:textTitle="我的特权"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/activity_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通会员"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/my_power_go_img"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
        <ImageView
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/my_power_go_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right"/>
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/activity_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP会员"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/my_power_go_img_02"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
        <TextView
            android:textSize="@dimen/activity_text_normal"
            android:layout_marginRight="8dp"
            android:text="查看VIP会员特权"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/my_power_go_img_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/activity_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金钻会员"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/my_power_go_img_03"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
        <TextView
            android:textSize="@dimen/activity_text_normal"
            android:layout_marginRight="8dp"
            android:text="查看金钻会员特权"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/my_power_go_img_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
</LinearLayout>
