<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_white_to"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.WhiteScoreActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="我的兑现券"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/no_ticket_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/white_ticket_no_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_deep_gray"
                android:layout_marginTop="20dp"
                android:text="您还没有快速兑现券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_deep_gray"
                android:layout_marginTop="15dp"
                android:text="推荐好友加入可获得快速兑现券奖励"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/text_deep_gray"
                android:layout_marginTop="15dp"
                android:text="加入百万计划了解更多..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:layout_marginBottom="15dp"
            android:text="了解百万计划"
            android:layout_alignParentBottom="true"
            style="@style/btnNormal" />
    </RelativeLayout>
    <com.ascba.rebate.view.ScrollViewWithListView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/cash_ticket_list"
        android:divider="#f2f2f2"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
