<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/pc_beijing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="9.5dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/activity_pc_item_head_xiaoxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pc_xiaoxi" />

        <ImageView
            android:id="@+id/activity_pc_item_head_xiaoxi_notify"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="-8dp"
            android:layout_toRightOf="@+id/activity_pc_item_head_xiaoxi"
            android:background="@drawable/notify_img"/>

        <ImageView
            android:id="@+id/activity_pc_item_head_dianpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/pc_dianpu" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_pc_item_head_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pc_touxiang" />

        <TextView
            android:id="@+id/activity_pc_item_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="钱来钱往" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_pc_item_head_img_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pc_huiyuan" />

            <TextView
                android:id="@+id/activity_pc_item_head_text_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.5dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="金钻会员" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>