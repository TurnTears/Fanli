<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/pc_beijing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="9.5dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/activity_pc_item_head_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/activity_pc_item_head_xiaoxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pc_xiaoxi" />

            <ImageView
                android:id="@+id/activity_pc_item_head_xiaoxi_notify"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="-8dp"
                android:layout_toRightOf="@+id/activity_pc_item_head_xiaoxi"
                android:background="@drawable/notify_img" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/activity_pc_item_head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/abar_back_white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:background="@drawable/bg_circle" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/me_user_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/pc_touxiang" />
        </FrameLayout>


        <TextView
            android:id="@+id/activity_pc_item_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="钱来钱往"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_pc_item_head_img_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pc_huiyuan" />

            <TextView
                android:id="@+id/activity_pc_item_head_text_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.5dp"
                android:text="金钻会员"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>