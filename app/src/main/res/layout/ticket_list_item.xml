<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ticket_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticket_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城代金券"
                android:textColor="@color/moneyBarColor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ticket_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="有效期至2018-01-01"
                android:textColor="@color/moneyBarColor"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ticket_money_label_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="232dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/ticket_money_label" />

        <TextView
            android:id="@+id/ticket_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ticket_money_label_01"
            android:text="50"
            android:textColor="@color/moneyBarColor"
            android:textSize="35sp" />
    </RelativeLayout>
</FrameLayout>