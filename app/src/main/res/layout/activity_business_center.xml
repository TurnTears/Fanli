<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_business_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.BusinessCenterActivity">
    <com.ascba.rebate.view.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="商户中心"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal">
        <TextView

            android:textSize="@dimen/activity_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:id="@+id/ed_company_name"
            android:maxLines="1"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入姓名"/>
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/activity_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法人姓名"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:maxLines="1"
            android:id="@+id/ed_busi_law_man"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入姓名"/>
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:onClick="goSelectLocation"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/activity_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司地址"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/business_back_employee_go"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
        <TextView
            android:id="@+id/tv_busi_address"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/business_back_employee_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/activity_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司电话"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:maxLines="1"
            android:id="@+id/ed_busi_phone"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入公司电话"/>
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>

    <TextView
        android:textSize="@dimen/activity_text_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="营业执照"/>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/add_picture_all_wide_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="164dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/add_passport"
            android:layout_marginTop="33dp"
            android:textColor="@color/white"
            android:background="@drawable/add_picture_bg"
            android:text="+添加图片"
            android:textSize="@dimen/activity_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_below="@id/add_passport"
            android:textSize="@dimen/activity_text_normal"
            android:layout_marginTop="15dp"
            android:text="请上传照片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:onClick="go_business_center"
        android:layout_marginTop="43dp"
        android:textSize="@dimen/activity_text_normal"
        style="@style/btnNormal"
        android:text="提交"/>

</LinearLayout>
