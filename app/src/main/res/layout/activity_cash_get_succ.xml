<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recha_succ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.recharge_child.RechaSuccActivity">
    <com.ascba.rebate.view.MoneyBar
        android:id="@+id/mb"
        app:needComplete="true"
        app:textTitle="提现"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@mipmap/pay_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="12.5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="@color/moneyBarColor"
        android:text="提现成功"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:lineSpacingExtra="3dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:text="遇到提现高峰期，到账可能存在延迟，若48小时后未到账，请拨打客服电话。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="19dp"
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:onClick="goAcc"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="59dp">
        <ImageView
            android:id="@+id/pay_img"
            android:layout_centerVertical="true"
            android:src="@mipmap/pay_success_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/pay_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="查看账单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="6dp"
                android:textSize="13sp"
                android:text="提现金额随时查询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textColor="@color/moneyBarColor"
            android:background="@drawable/recharge_success_check_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
