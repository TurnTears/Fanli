<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_business_center2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.BusinessCenter2Activity">
    <com.ascba.rebate.view.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="商户中心"/>
    <ScrollView
        android:scrollbars="none"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称"/>
                <TextView
                    android:id="@+id/tv_company_name_loading"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                style="@style/viewStyleMatch"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="法人姓名"/>
                <TextView
                    android:id="@+id/tv_law_man_loading"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                style="@style/viewStyleMatch"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司地址"/>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/activity_text_normal"
                    android:id="@+id/tv_address_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                style="@style/viewStyleMatch"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_space"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司电话"/>
                <TextView
                    android:id="@+id/tv_phone_loading"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                style="@style/viewStyleMatch"/>

            <TextView
                android:textSize="@dimen/activity_text_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业执照"/>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="164dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
            <Button
                android:id="@+id/btn"
                android:layout_marginBottom="20dp"
                android:background="@drawable/checking_btn_bg"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="43dp"
                android:textSize="@dimen/activity_text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="审核中"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
