<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <TextView
        android:id="@+id/item_tablayout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="14sp"
        android:paddingTop="6dp"
        android:text="待发货" />


    <TextView
        android:id="@+id/item_tablayout_noti"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/notify_text"
        android:gravity="center"
        android:text="2"
        android:textColor="#DD0E0E"
        android:textSize="10dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="2dp"
        android:layout_alignTop="@+id/item_tablayout_text"
        android:layout_toRightOf="@+id/item_tablayout_text"
        android:layout_toEndOf="@+id/item_tablayout_text" />
</RelativeLayout>