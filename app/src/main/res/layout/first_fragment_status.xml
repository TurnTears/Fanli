<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--扫一扫区域 -->
        <RelativeLayout
            android:background="#e73030"
            android:layout_width="match_parent"
            android:layout_height="228dp">
            <LinearLayout
                android:layout_marginTop="31dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_location_more"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="71dp"
                android:id="@+id/main_sweep_icon"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_sweep"/>
            <TextView
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/main_sweep_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"/>
            <LinearLayout
                android:layout_marginBottom="11dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"/>
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昨日返还积分"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"

                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"/>
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赠送积分总额"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"/>
                    <TextView
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昨日赠送比率"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--轮播图区域 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/view_line"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_pager"
            android:layout_width="match_parent"
            android:layout_height="115dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/view_line"/>
        <!--商家推荐标题-->
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <ImageView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:id="@+id/main_business_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_business_title"/>
            <TextView
                android:textSize="15sp"
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/main_business_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门推荐"/>
            <ImageView
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:id="@+id/main_business_more_icon_01"
                android:layout_alignParentRight="true"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@mipmap/main_business_more"/>
            <ImageView
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:id="@+id/main_business_more_icon_02"
                android:layout_toLeftOf="@id/main_business_more_icon_01"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@mipmap/main_business_more"/>
            <ImageView
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/main_business_more_icon_02"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@mipmap/main_business_more"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <!--商家列表-->
        <com.qlqwgw.fanli.view.ScrollViewWithListView
            android:background="@color/white"
            android:id="@+id/main_business_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>