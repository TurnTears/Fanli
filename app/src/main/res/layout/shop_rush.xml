<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:minHeight="177dp"
    android:layout_width="match_parent"
    android:layout_height="177dp">
    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_rush_title"
            android:textColor="#dc0404"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="限量抢购"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_rush_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="10sp"
            android:text="限量抢购"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@drawable/shop_rush_bg"
            android:id="@+id/tv_rush_desc"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:text="仅剩三件"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>