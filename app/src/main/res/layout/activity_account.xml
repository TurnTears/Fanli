<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.fanli.activities.AccountActivity">
    <com.ascba.fanli.view.MoneyBar
        app:textTitle="账单"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.lhh.apst.library.AdvancedPagerSlidingTabStrip
        android:id="@+id/tabs_account"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/pagertab_style"
        android:fillViewport="false"/>
    <com.ascba.fanli.activities.main.APSTSViewPager
        android:id="@+id/vp_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
