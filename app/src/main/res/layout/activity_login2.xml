<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    tools:context="com.ascba.rebate.activities.login.LoginWorkActivity">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:src="@mipmap/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_name"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:textColorHint="#949494"
            android:id="@+id/login_phone_ed"
            android:inputType="phone"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintSize="@dimen/activity_text_normal"
            android:hint="请输入您的手机号"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:maxLines="1" />
    </LinearLayout>
    <View
        android:background="#d5d5d5"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp" />
    <LinearLayout
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_password"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:maxLines="1"
            android:textSize="15sp"
            android:textColorHint="#949494"
            android:id="@+id/login_password_ed"
            android:inputType="textWebPassword"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintSize="@dimen/activity_text_normal"
            android:hint="请输入您的密码"/>
    </LinearLayout>
    <View
        android:background="#d5d5d5"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp" />
    <Button
        android:textColor="#cc0505"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:onClick="goMain"
        android:textSize="17sp"
        android:text="登 录"
        android:layout_marginTop="40dp"
        android:background="@drawable/register_btn_bg_new" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="12.5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#cecece"
            android:textSize="14sp"
            android:onClick="goRegister"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="157dp"
            android:textColor="#cecece"
            android:textSize="14sp"
            android:onClick="goForgetPassword"
            android:layout_gravity="center"
            android:text="忘记密码?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
