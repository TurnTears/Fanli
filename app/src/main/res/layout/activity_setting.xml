<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_safe_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.fanli.activities.SafeSettingActivity">
    <com.ascba.fanli.view.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="设置"/>
    <RelativeLayout
        android:onClick="settingPersonalDataClick"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/safe_setting_img_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_business_category"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/safe_setting_img_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>
    <RelativeLayout
        android:onClick="settingRealNameConfirm"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/safe_setting_img_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_business_category"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/safe_setting_img_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>
    <RelativeLayout
        android:onClick="settingMyPower"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/safe_setting_img_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_business_category"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/safe_setting_img_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的特权"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>
    <RelativeLayout
        android:onClick="settingMyQRCode"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/safe_setting_img_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_business_category"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/safe_setting_img_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的二维码"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>
    <RelativeLayout
        android:onClick="settingSafeSetting"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/safe_setting_img_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_business_category"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/safe_setting_img_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全设置"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line"/>
</LinearLayout>
