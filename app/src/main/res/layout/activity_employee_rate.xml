<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_employee_rate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.EmployeeRateActivity">
    <com.ascba.rebate.view.MoneyBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textTitle="返佣比"/>
    <RadioGroup
        android:id="@+id/rg_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rate_8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:drawableRight="@drawable/employee_rate_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_space"
            android:text="8.0%"/>
        <View
            android:visibility="gone"
            style="@style/viewStyleMatch"/>
        <RadioButton
            android:id="@+id/rate_16"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:drawableRight="@drawable/employee_rate_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_space"
            android:text="16.0%"/>
        <View
            style="@style/viewStyleMatch"/>
        <RadioButton
            android:visibility="gone"
            android:id="@+id/rate_24"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:drawableRight="@drawable/employee_rate_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_space"
            android:text="24.0%"/>
        <View
            android:visibility="gone"
            style="@style/viewStyleMatch"/>
    </RadioGroup>
</LinearLayout>
