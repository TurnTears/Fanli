<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_modify_nickname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qlqwgw.fanli.activities.ModifyNicknameActivity">
    <com.qlqwgw.fanli.view.MoneyBar
        app:textTitle="修改昵称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/activity_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"/>

        <com.qlqwgw.fanli.view.EditTextWithCustomHint
            android:layout_marginLeft="20dp"
            app:hintSize="14sp"
            android:hint="一头发疯的小猫"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextWithCustomHint3" />
    </LinearLayout>
    <ImageView
        style="@style/viewStyleMatch"/>
    <Button
        android:layout_marginTop="30dp"
        android:text="保存"
        style="@style/btnNormal"/>
</LinearLayout>
