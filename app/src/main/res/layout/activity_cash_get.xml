<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qlqwgw.fanli.activities.AccountRechargeActivity">

    <com.qlqwgw.fanli.view.MoneyBar
        app:textTitle="提现"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/recharge_rec_bg"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="@drawable/rechage_bg"
            android:layout_width="match_parent"
            android:layout_height="58dp">
            <TextView
                android:id="@+id/recharge_tv_01"
                android:textSize="@dimen/activity_text_normal"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账银行卡"/>
            <TextView
                android:textColor="@color/white"
                android:layout_toRightOf="@id/recharge_tv_01"
                android:textSize="@dimen/activity_text_normal"
                android:layout_marginLeft="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招商银行（7894）"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_go"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/activity_text_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"/>
        <LinearLayout
            android:layout_marginTop="29dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <com.qlqwgw.fanli.view.EditTextWithCustomHint
                android:hint="请输入金额"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="214.13"/>

        </LinearLayout>
        <View
            style="@style/viewStyleMargin"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/activity_text_normal"
                android:textColor="#80000000"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="账户余额 ¥ 486.23"/>
            <TextView
                android:textColor="@color/text_blue"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部提现"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:text="提现"
        android:layout_marginTop="29dp"
        style="@style/btnNormal"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
