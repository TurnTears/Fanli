<?xml version="1.0" encoding="utf-8"?>
<com.ascba.rebate.view.SuperSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.ascba.rebate.view.ShopABarText
                android:id="@+id/shopbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                app:abar_title="确认订单" />

            <include layout="@layout/goods_details_cuttingline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/confirm_order_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_location_black" />

                <ImageView
                    android:id="@+id/confirm_order_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/right2_arrow" />

                <TextView
                    android:id="@+id/confirm_order_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@id/confirm_order_location"
                    android:text="纸灰机"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/confirm_order_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/confirm_order_username"
                    android:text="18311011381"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/confirm_order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/confirm_order_username"
                    android:layout_marginBottom="13.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/confirm_order_right"
                    android:layout_toRightOf="@id/confirm_order_location"
                    android:text="北京北京市丰台区光彩路建邦华府底商钱来钱往网络科技有限公司"
                    android:textSize="13sp" />
            </RelativeLayout>

            <include layout="@layout/goods_details_cuttingline_wide" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/confir_order_img_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/business_detail_desc" />

                <TextView
                    android:id="@+id/confir_order_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/confir_order_img_bus"
                    android:text="RCC韩国代购-男装" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lighter_gray" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="购买数量"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <com.ascba.rebate.view.cart_btn.NumberButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"></com.ascba.rebate.view.cart_btn.NumberButton>
            </RelativeLayout>

            <include layout="@layout/goods_details_cuttingline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="配送方式"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="2dp"
                    android:drawableRight="@mipmap/right2_arrow"
                    android:text="快递￥10.00"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <include layout="@layout/goods_details_cuttingline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="买家留言："
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="选填：对本次交易的说明（建议填写和已卖出的商品）"
                    android:maxLines="1"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/goods_details_cuttingline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/confir_order_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="368.00元"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/confir_order_text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/confir_order_text_price"
                    android:text="合计："
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/confir_order_text_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:layout_toLeftOf="@id/confir_order_text_total"
                    android:text="共一件商品"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <include layout="@layout/goods_details_cuttingline_wide" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15.5dp"
                android:paddingTop="15.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="选择代金券"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="2dp"
                    android:drawableRight="@mipmap/right2_arrow"
                    android:hint="最大可使用200代金券"
                    android:textSize="14sp" />
            </RelativeLayout>

            <include layout="@layout/goods_details_cuttingline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15.5dp"
                android:paddingTop="15.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="增值积分"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="36800积分"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <include layout="@layout/goods_details_cuttingline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15.5dp"
                android:paddingTop="15.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="选择增值方式"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="2dp"
                    android:drawableRight="@mipmap/right2_arrow"
                    android:hint="请选择增值的方式"
                    android:textSize="14sp" />
            </RelativeLayout>

            <include layout="@layout/goods_details_cuttingline_wide" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/confir_order_btn_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:paddingLeft="25.5dp"
                    android:paddingRight="25.5dp"
                    android:text="提交订单"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/confir_order_text_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/confir_order_btn_commit"
                    android:text="￥368.00"
                    android:textColor="@color/shop_red_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/confir_order_text_total_price"
                    android:text="实付款："
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</com.ascba.rebate.view.SuperSwipeRefreshLayout>
