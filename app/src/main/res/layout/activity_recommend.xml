<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascba.rebate.activities.RecommendActivity">
    <com.ascba.rebate.view.SwitchButton
        android:id="@+id/switch_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_share"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:text="分享"
        style="@style/btnNormal" />
    <FrameLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/recommend_fragment"
        android:layout_below="@id/switch_action_bar"
        android:layout_above="@id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
