<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.AccountRechargeActivity">

    <com.ascba.rebate.view.MoneyBar
        app:textTitle="红积分"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/activity_text_title"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您可兑换红积分为400"/>
        <TextView
            android:textColor="@color/text_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="兑换规则"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/recharge_rec_bg"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="@drawable/rechage_bg"
            android:layout_width="match_parent"
            android:layout_height="58dp">
            <TextView
                android:id="@+id/recharge_tv_01"
                android:textSize="@dimen/activity_text_normal"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入积分"/>
            <TextView
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/activity_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="23dp"
            android:layout_marginBottom="19dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/activity_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返现金"/>
                <LinearLayout
                    android:layout_marginTop="29dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/logo"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.009"
                android:layout_height="match_parent"
                android:background="@color/view_line"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/red_score_ticket_tv"
                        android:textSize="@dimen/activity_text_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返代金券"/>
                    <LinearLayout
                        android:layout_marginTop="29dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/red_score_ticket_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/logo"/>
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/viewStyleMargin" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/activity_text_normal"
                android:textColor="#80000000"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日兑换比例 1 ：1"/>
            <TextView
                android:textColor="@color/text_blue"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本周兑换比例"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:text="兑换"
        android:layout_marginTop="29dp"
        style="@style/btnNormal"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
