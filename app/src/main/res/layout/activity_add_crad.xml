<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_crad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.AddCardActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="添加银行卡"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="46dp"
        android:orientation="horizontal">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持卡人"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:inputType="text"
            android:background="@null"
            android:id="@+id/ed_add_card_name"
            android:maxLines="1"
            android:textSize="14sp"
            android:hint="请输入持卡人姓名"
            android:layout_marginLeft="26dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="46dp"
        android:orientation="horizontal">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡号"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:inputType="number"
            android:background="@null"
            android:id="@+id/ed_add_card_number"
            android:maxLines="1"
            android:textSize="14sp"
            android:hint="请输入卡号"
            android:layout_marginLeft="26dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        style="@style/viewStyleMatch"/>
    <Button
        android:onClick="next"
        android:layout_marginTop="50dp"
        android:text="下一步"
        style="@style/btnNormal" />
    <TextView
        android:onClick="goCardProtocol"
        android:textSize="13sp"
        android:textColor="@color/text_blue"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="使用前请阅读服务协议?"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>
