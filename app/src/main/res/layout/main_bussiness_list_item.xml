<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87dp">
    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/iv_main_business_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_business_01"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_main_business_logo"
        android:id="@+id/gp_main_business_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/tv_main_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华融典当"/>
        <LinearLayout
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13sp"
                android:id="@+id/tv_main_business_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金牌商家"/>
            <RatingBar
                android:layout_marginLeft="15dp"
                android:stepSize="1"
                android:numStars="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/red"
            android:textSize="13sp"
            android:id="@+id/tv_main_business_goodjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1350人好评"/>
        <TextView
            android:textSize="13sp"
            android:id="@+id/tv_main_business_distance"
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="352m"/>
    </LinearLayout>

</RelativeLayout>