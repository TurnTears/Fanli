<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:id="@+id/iv_main_business_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"/>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_main_business_logo"
        android:id="@+id/gp_main_business_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_main_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华融典当"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_main_business_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金牌商家"/>
            <ImageView
                android:id="@+id/iv_main_business_category_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/logo"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_main_business_goodjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1350人好评"/>
        <TextView
            android:id="@+id/tv_main_business_distance"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="352m"/>
    </LinearLayout>

</RelativeLayout>