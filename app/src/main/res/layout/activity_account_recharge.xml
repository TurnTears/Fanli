<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.AccountRechargeActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="充值"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:src="@mipmap/alipay"
            android:layout_centerVertical="true"
            android:id="@+id/recharge_card_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/recharge_card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/activity_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"/>
            <TextView
                android:textSize="@dimen/activity_text_title"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝账户充值"/>
        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/view_line"/>
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="充值金额"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="¥"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:id="@+id/ed_recharge_money"
            android:inputType="numberDecimal"
            app:hintSize="15sp"
            android:hint="请输入充值金额"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_marginLeft="7dp"
            android:textSize="37sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="7dp"
        style="@style/viewStyleMargin"/>
    <!--<TextView
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="该卡充值金额最大为300000元"/>
    <View
        style="@style/viewStyleMatch"/>-->
    <Button
        android:onClick="goRechargeActivity"
        android:text="充值"
        android:layout_marginTop="29dp"
       style="@style/btnNormal"/>
    <!--<Button
        android:onClick="goWXSweepPay"
        android:text="微信充值"
        android:layout_marginTop="29dp"
        style="@style/btnNormal"/>-->

</LinearLayout>
