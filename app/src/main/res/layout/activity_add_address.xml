<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ascba.rebate.view.ShopABarText
        android:id="@+id/add_address_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:abar_title="新增地址"></com.ascba.rebate.view.ShopABarText>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lighter_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <RelativeLayout
            android:id="@+id/activity_add_rl_contact"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/lighter_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/icon_contact_red"
                android:text="选联系人"
                android:textColor="#dc0404"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/activity_add_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/activity_add_rl_contact"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="收货人"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lighter_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="联系人电话"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lighter_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="所在地区"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/right2_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lighter_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="街道"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/right2_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lighter_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:hint="请填写详细地址，不少于10个字~"
        android:paddingLeft="14dp"
        android:paddingTop="14dp"
        android:textColorHint="#606060"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lighter_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="设置为默认地址"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="14sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="6dp"
            android:button="@drawable/switch_add"
            android:checked="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lighter_gray" />
</LinearLayout>