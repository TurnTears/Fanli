<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ascba.rebate.fragments.CartFragment">

    <com.ascba.rebate.view.ShopABar
        android:id="@+id/sab"
        app:abar_title="购物车(3)"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <LinearLayout
        android:id="@+id/cart_clear"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <CheckBox
            android:id="@+id/cart_cb_total"
            android:textSize="13sp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="15dp"
            android:textColor="@color/shop_normal_text_color"
            android:maxLines="1"
            android:text="全选"
            android:button="@drawable/cart_cb_bg"
            android:layout_weight="172"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="86"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="共计："
            android:textSize="13sp"
            android:textColor="@color/shop_normal_text_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cart_tv_cost_total"
            android:layout_weight="230"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="￥368.00"
            android:textSize="13sp"
            android:textColor="@color/shop_red_text_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="230"
            android:gravity="center"
            android:background="@color/moneyBarColor"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="结算(1)"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.ascba.rebate.view.SuperSwipeRefreshLayout
        android:layout_above="@id/cart_clear"
        android:layout_below="@id/sab"
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_goods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.ascba.rebate.view.SuperSwipeRefreshLayout>

</RelativeLayout>
